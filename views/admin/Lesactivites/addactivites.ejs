<%- include ('../includesad/header.ejs') %>
    <div class="formpageadmin" style="padding-left: 20px">
        <div class="titreformadmin">
            <h1>add Activit√©s</h1>

            <% if(locals.message) { %>

                <div class="ui green message">
                    <%- message %>
                </div>
                <% } %>
                    <% if(locals.errmessage) { %>
                        <div class="ui red message">
                            <%- errmessage %>
                        </div>

                        <% } %>
        </div>
            <form method="post" enctype="multipart/form-data" class="ui form" style="width: 70%">
                <div class="field">
                    <label>Titre</label>
                    <input type="text" name="titre" value="<%= activites.Titre %>">
                </div>
                <div class="field">
                    <label>Image</label>
                    <input type="file" name="image">
                    <%= activites.Image %></input>
                </div>
                <div class="field">
                    <label>Description</label>
                    <textarea type="textarea" name="description"><%= activites.Description %></textarea>
                </div>
                <button class="ui button">Submit</button>
                <input type="hidden" value="<%= activites.idactivites %>">
            </form>
    </div>
